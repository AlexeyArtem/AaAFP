<UserControl x:Class="AaAFP2.DataTablePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AaAFP2"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180"
             x:Name="dataTablePicker">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Gray" Width="Auto" Height="Auto">
            <TextBlock x:Name="TbIdRow" Width="Auto" Height="Auto" Text="{Binding ElementName=dataTablePicker, Path=IdRow}" Grid.Column="0" VerticalAlignment="Center" Margin="3,0,0,0"></TextBlock>
        </Border>
        <Button Width="Auto" Grid.Column="1" Click="Button_Click" Margin="5,0,0,0">...</Button>
    </Grid>
</UserControl>
